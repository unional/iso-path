{
  "name": "@unional/iso-path",
  "version": "0.0.1",
  "description": "Isomorphic path utility.",
  "homepage": "https://github.com/unional/iso-path",
  "bugs": {
    "url": "https://github.com/unional/iso-path/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/iso-path.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:doc": "typedoc",
    "clean": "rimraf lib coverage",
    "coverage": "jest --coverage",
    "cs": "changeset",
    "depcheck": "depcheck",
    "lint": "eslint --ext=ts,js .",
    "nuke": "yarn clean && rimraf node_modules",
    "prepare": "husky install",
    "release": "npx semantic-release",
    "size": "size-limit",
    "test": "jest",
    "test:types": "tsc",
    "verify": "run-p verify:build lint test:types coverage",
    "verify:build": "npm-run-all clean build -p depcheck size",
    "watch": "jest --watch"
  },
  "dependencies": {
    "path-equal": "^1.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@changesets/cli": "^2.22.0",
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@size-limit/preset-small-lib": "^11.0.0",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "depcheck": "^1.4.3",
    "eslint": "^8.15.0",
    "eslint-plugin-harmony": "^7.0.2",
    "husky": "^8.0.1",
    "jest": "^29.0.0",
    "jest-validate": "^29.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^3.0.0",
    "jest-watch-typeahead": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.0",
    "size-limit": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "yarn@4.0.1",
  "size-limit": [
    {
      "limit": "10 kb"
    }
  ]
}
